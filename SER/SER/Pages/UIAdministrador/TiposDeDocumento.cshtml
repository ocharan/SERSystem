@page
@model SER.Pages.UIAdministrador.TiposDeDocumento

@{
    ViewData["Title"] = "Tipos de documento";
}

<div class="container">
    <div class="container">
        <div class="d-flex justify-content-center align-content-center h-100" style="margin-bottom: 50px; margin-top: 50px;">
            <h3 style="font-size: 20px">TIPOS DE DOCUMENTO REGISTRADOS</h3>
        </div>
        <div class="input-group mb-3" style="margin-top: 50px">
            <input type="text" class="form-control" style="float: left; min-width: 50px; border-radius: 5px;" placeholder="Búscar tipo">
            <button class="btn btn-primary" type="button" style="border-radius: 5px; margin-left: 5px; margin-right: 40%;">Búscar</button>
            <button class="btn btn-success" style="float: right; border-radius: 5px; margin-left: 5px" onclick="window.open('RegistrarTipoDocumento', '_self')" type="button">Registrar nuevo tipo</button>
        </div>
    </div>
    
    <div>
        <hr />
        <div class="form-group">
            <div class="table-responsive">
                <table id="tbltrabajosrecepcionales" class="table table-hover">
                    <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Experiencia educativa</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var tipo in @Model.TiposDeDocumentos)
                    {
                        <tr>
                            <td>@tipo.NombreDocumento</td>
                            <td>@tipo.ExperienciaEducativa</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


