                                        <a class="nav-link">></a>
                                    </li>
                                        <li class="nav-item active" style="font-size: 25px">
                                            <a class="nav-link" href="TiposDeDocumento">Tipos de documentos</a>
                                        </li>`
  }
  </script>
}

