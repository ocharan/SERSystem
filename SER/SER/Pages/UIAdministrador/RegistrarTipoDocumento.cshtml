@page
@model SER.Pages.UIAdministrador.RegistrarTipoDocumento

@{
    ViewData["Title"] = "Registrar tipo de documento";
}

<form id="registrarProyectoForm" method="post">
    <div class="container p-2 h-100" style="margin-top: 40px">
        <div class="d-flex justify-content-center align-content-center h-100" style="margin-bottom: 50px">
            <h3 style="font-size: 20px">REGISTRAR TIPO DE DOCUMENTO</h3>
        </div>
        <div class="d-flex justify-content-center align-content-center h-100">
            <select id="nombreList" class="form-select" asp-for="TipoDocumento.ExperienciaEducativa" style="width: 348px; border-radius: 5px" required>
                <option value="" selected disabled="disabled">Experiencia educativa</option>
                <option value="Proyecto guíado">Proyecto guíado</option>
                <option value="Experiencia Recepcional">Experiencia Recepcional</option>
            </select>
        </div>
    </div>
    
    <div class="d-flex justify-content-center align-content-center h-100" style="margin-top: 20px">
        <input type="text" id="inputNombreTipo" style="width: 348px;" asp-for="TipoDocumento.NombreDocumento" placeholder="Nombre del tipo de documento" class="form-control" required="required"/>
    </div>
    
    <div class="container p-5 h-100">
        <div class="d-flex justify-content-center align-content-center h-100">
            <input type="submit" class="btn btn-success" id="btnGuardarTipoDocumento" value="Guardar registro"/>
        </div>
    </div>
</form>

@if(TempData["Success"] !=null)
{
     <div class="alert alert-success">
         @TempData["Success"], redirigiendo...
     </div>
     
     <script>
         document.getElementById("btnGuardarTipoDocumento").setAttribute('disabled', true)
          setTimeout(() => { window.location.href = '../Menus/UIAdministración' }, 1500);
     </script>   
 }


@if (TempData["Error"] != null)
{
    <div id="alertError" class="alert alert-danger">
        @TempData["Error"]
    </div>
}

