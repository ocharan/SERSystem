@page
@model SER.Pages.UIAdministrador.EditarExperienciaEducativa

@{
    ViewData["Title"] = "Editar experiencia educativa";
}

<form id="editarProyectoForm" enctype="multipart/form-data"  method="post">
    <div class="container p-2 h-100" style="margin-top: 40px">
        <div class="d-flex justify-content-center align-content-center h-100" style="margin-bottom: 50px">
            <h3 style="font-size: 20px">EDITAR EXPERIENCIA EDUCATIVA</h3>
        </div>
        <div class="d-flex justify-content-center align-content-center h-100">
            <select id="nombreList" name="expNombre" asp-for="ExperienciaEducativa.Nombre" class="form-select" style="width: 348px; border-radius: 5px" required>
                <option value=""  selected disabled="disabled">Nombre</option>
                <option value="Proyecto guíado">Proyecto guíado</option>
                <option value="Experiencia recepcional">Experiencia Recepcional</option>
            </select>
        </div>
    </div>
    <div class="container p-2 h-100" style="margin-top: 40px">
        <div class="d-flex justify-content-center align-content-center h-100">
            <div class="form-check form-switch">
                  <input class="form-check-input" name="expEstado" asp-for="estado" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                  <label class="form-check-label" for="flexSwitchCheckDefault">Cerrar experiencia educativa</label>
            </div>
        </div>
    </div>
    
    
    <div class="d-flex justify-content-center align-content-center h-100" style="margin-top: 20px">
        <input type="number" id="inputNRC" asp-for="ExperienciaEducativa.Nrc" style="width: 348px;" placeholder="NRC" class="form-control" required="required" disabled/>
    </div>
    
    <div class="d-flex justify-content-center align-content-center h-100" style="margin-top: 20px">
        <select id="seccionList" name="expPeriodo" asp-for="ExperienciaEducativa.Periodo" class="form-select" style="width: 348px; border-radius: 5px" required>
            <option value=""  selected disabled="disabled">Periodo</option>
            <option value="AGO22 - FEB23">AGO22 - FEB23</option>
            <option value="FEB23 - AGO23">FEB23 - AGO23</option>
            <option value="AGO23 - FEB24">AGO23 - FEB24</option>
        </select>
    </div>
    
    <div class="d-flex justify-content-center align-content-center h-100" style="margin-top: 20px">
        <select id="seccionList" name="expSeccion" asp-for="ExperienciaEducativa.Seccion" class="form-select" style="width: 348px; border-radius: 5px" required>
            <option value=""  selected disabled="disabled">Sección</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
    </div>
    
    
    
    <div class="input-group mb-3" style="margin-top: 50px">
        <label style="margin-top: 6px" for="btnFile">Archivo subido:</label>
                @if (Model.archivoExistente)
                {
                    <button id="btnFile" class="btn btn-link" asp-page-handler="file" type="submit" asp-route-id="@Request.Query["id"]">@Model.ArchivoExperiencia.NombreArchivo</button>
                }
                else
                {
                    <label style="margin-top: 7px; margin-left: 20px" for="btnFile">Sin archivos subidos</label>
                }
    </div>
    <div class="input-group mb-3" style="margin-top: 50px">
        <input class="form-control" name="fileExperiencia" accept="application/msword, application/pdf, application/vnd.ms-powerpoint"  
               type="file" id="formFile">
    </div>
    <div class="container p-5 h-100">
        <div class="d-flex justify-content-center align-content-center h-100">
            <input type="submit" asp-page-handler="update" asp-route-id="@Request.Query["id"]" class="btn btn-success" id="btnGuardarExp" value="Guardar registro"/>
        </div>
    </div>
</form>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"], redirigiendo...
    </div>
    
    <script>
        document.getElementById("btnGuardarExp").setAttribute('disabled', true)
         setTimeout(() => { window.location.href = 'ExperienciasEducativas' }, 2000);
    </script>
}

