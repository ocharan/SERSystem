

@page
@model SER.Pages.UIAdministrador.RegistrarExperiencia

@{
    ViewData["Title"] = "Registrar experiencia";

}

<form id="registrarProyectoForm" enctype="multipart/form-data" method="post">
    <div class="container p-2 h-100" style="margin-top: 40px">
        <div class="d-flex justify-content-center align-content-center h-100" style="margin-bottom: 50px">
            <h3 style="font-size: 20px">REGISTRAR EXPERIENCIA EDUCATIVA</h3>
        </div>
        <div class="d-flex justify-content-center align-content-center h-100">
            <select id="nombreList" asp-for="ExperienciaEducativa.Nombre" class="form-select" style="width: 348px; border-radius: 5px" required>
                <option value=""  selected disabled="disabled">Nombre</option>
                <option value="Proyecto guíado">Proyecto guíado</option>
                <option value="Experiencia recepcional">Experiencia Recepcional</option>
            </select>
        </div>
    </div>
    
    <div class="d-flex justify-content-center align-content-center h-100" style="margin-top: 20px">
        <input type="text" id="inputNRC" asp-for="ExperienciaEducativa.Nrc" maxlength="5" pattern="[0-9]{5}" style="width: 348px;" placeholder="NRC" class="form-control" required="required"/>
    </div>
    
    <div class="d-flex justify-content-center align-content-center h-100" style="margin-top: 20px">
        <select id="seccionList" asp-for="ExperienciaEducativa.Periodo" class="form-select" style="width: 348px; border-radius: 5px" required>
            <option value=""  selected disabled="disabled">Periodo</option>
            <option value="AGO22 - FEB23">AGO22 - FEB23</option>
            <option value="FEB23 - AGO23">FEB23 - AGO23</option>
            <option value="AGO23 - FEB24">AGO23 - FEB24</option>
        </select>
    </div>
    
    <div class="d-flex justify-content-center align-content-center h-100" style="margin-top: 20px">
        <select id="seccionList" asp-for="ExperienciaEducativa.Seccion" class="form-select" style="width: 348px; border-radius: 5px" required>
            <option value=""  selected disabled="disabled">Sección</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
    </div>
    
    <div class="input-group mb-3" style="margin-top: 50px">
        <input class="form-control" name="fileExperiencia" accept="application/msword, application/pdf, application/vnd.ms-powerpoint"  
               type="file" id="formFile">
    </div>

    <div class="container p-5 h-100">
        <div class="d-flex justify-content-center align-content-center h-100">
            <input type="submit" class="btn btn-success"  id="btnGuardarExp" value="Guardar registro"/>
        </div>
    </div>
</form>

@if (TempData["Error"] != null)
{
    <div id="alertError" class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div id="alertSuccess" class="alert alert-success">
        @TempData["Success"], redirigiendo...
    </div>
    
    <script>
        document.getElementById("btnGuardarExp").setAttribute('disabled', true)
         setTimeout(() => { window.location.href = 'ExperienciasEducativas' }, 2000);
    </script>
}

