@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SER.Pages.UICoordinador.CuerpoAcademico.RegistrarProyecto

@{
    ViewData["Title"] = "Selección de registro";
}



<form id="seleccionRegistro" method="post" style="margin-top: 50px">
    <div id="registroSeleccion" class="container">
        <div class="container p-2 h-100" style="margin-top: 40px">
            <h2 class="card-title" style="text-align: center; margin-bottom: 40px">Tipo de proyecto a registrar</h2>
            <div class="d-flex justify-content-center align-content-center h-100">
                <select id="select_tipo" asp-for="@Model.tipoRegistro" class="form-select" style="border-radius: 5px; width: 50%">
                    <option selected disabled="disabled">Selecciona tipo de proyecto</option>
                    <option value="Proyecto de investigación">Proyecto de investigación</option>
                    <option value="pladea">PLADEA</option>
                    <option value="Proyecto de vinculación">Proyecto de vinculación</option>
                </select>
            </div>
        </div>
        <div class="container p-5 h-100">
            <div class="d-flex justify-content-center align-content-center h-100">
                <input type="submit" id="btn_Confirmar" style="width: 100px" class="btn btn-success" value="Confirmar"/>
            </div>
        </div>
    </div>
</form>


@if (ViewData["ErrorMessage"] != null)
{
    <div id="alertError" class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}

