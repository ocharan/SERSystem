@page
@model SER.Pages.UICoordinador.CuerpoAcademico.RegistrarOrganización

@{
    ViewData["Title"] = "Organización nueva";
}


<form id="registrarOrganizacionForm" method="post" style="margin-bottom: 200px">
    <div class="container p-2 h-100" style="margin-top: 40px">
        <div class="d-flex justify-content-center align-content-center h-100" style="margin-bottom: 50px">
            <h3 style="font-size: 20px">REGISTRAR ORGANIZACIÓN NUEVA</h3>
        </div>
        <div class="d-flex justify-content-center align-content-center h-100">
            <input type="text" id="inputNombreOrganizacion" asp-for="@Model.Organizacion.Nombre" style="width: 348px;" placeholder="Nombre de la organización" class="form-control" required="required"/>
        </div>
    </div>
    <div class="container p-5 h-100">
        <div class="d-flex justify-content-center align-content-center h-100">
            <input type="submit" class="btn btn-success" id="btnGuardarOrganizacion" value="Guardar registro"/>
        </div>
    </div>
</form>


@if (TempData["Error"] != null)
{
    <div id="alertError" class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"], redirigiendo...
    </div>
    
    <script>
        document.getElementById("btnGuardarOrganizacion").setAttribute('disabled', true)
         setTimeout(() => { window.location.href = 'Organizaciones' }, 2000);
    </script>
}



