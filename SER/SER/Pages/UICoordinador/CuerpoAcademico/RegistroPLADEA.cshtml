                @for(int i = 2000; i<=2050;i++){
                    <option id="@i">@i</option>
                }
            </select>
        </div>
    </div>
    <textarea itemid="idPladeaObjetivo" asp-for="@Model.pladeaRegistrar.ObjetivoGeneral" class="form-control" style="width: 100%; margin-top: 20px" placeholder="Objetivo general" rows="8" required></textarea>
    <div class="input-group mb-3" style="margin-top: 50px">
        <input type="file" class="form-control" accept="application/msword, application/pdf, application/vnd.ms-powerpoint" 
               name="file">
    </div>
    <div class="container p-5 h-100">
        <div class="d-flex justify-content-center align-content-center h-100">
            <input type="submit" class="btn btn-success" id="btnGuardarPladea" value="Guardar registro"/>
        </div>
    </div>
</form>


