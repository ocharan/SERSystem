@page
@model SER.Pages.AcademicBody.UpdateModel
@{
  ViewData["Title"] = "Actualizar información";
  Layout = "~/Pages/Shared/_LoginLayout.cshtml";
}

@section Styles {
  <link rel="stylesheet" href="~/css/Course/Create.css" />
}

<div class="container shadow-3 rounded-9 form-create p-5">
  <h5 class="mb-2 text-black fs-4 fw-normal">Formulario de Actualización: <strong>Cuerpo Académico</strong></h5>
  <p class="mb-3">Recuerda que, al actualizar la información de un Cuerpo Académico, se actualizarán los datos de todos los registros que lo contengan.
  </p>

  <form method="post" asp-page-handler="UpdateAcademicBody" novalidate>
    <div class="d-flex">
      <i class="d-flex align-items-center fa-solid fa-hashtag me-3 icon-input"></i>
      <div class="form-outline">
        <input type="text" id="input-academic-body-key" class="form-control form-control-lg" autocomplete="off" asp-for="academicBody.AcademicBodyKey" required />
        <label class="form-label" for="input-academic-body-key">Clave <span class="text-danger">*</span></label>
        <div class="form-helper"></div>
      </div>
    </div>
    <span asp-validation-for="academicBody.AcademicBodyKey" class="d-flex text-start text-danger mb-4"></span>
    <div class="d-flex">
      <i class="d-flex align-items-center fa-solid fa-users me-2 icon-input"></i>
      <div class="form-outline">
        <input type="text" id="input-name" class="form-control form-control-lg" autocomplete="off" asp-for="academicBody.Name" required />
        <label class="form-label" for="input-name">Nombre <span class="text-danger">*</span></label>
        <div class="form-helper"></div>
      </div>
    </div>
    <span asp-validation-for="academicBody.Name" class="d-flex text-start text-danger mb-4"></span>
    <div class="d-flex">
      <i class="d-flex align-items-center fa-solid fa-building-columns me-2 icon-input"></i>
      <div class="form-outline">
        <input type="text" id="input-ies" class="form-control form-control-lg" autocomplete="off" asp-for="academicBody.Ies" required />
        <label class="form-label" for="input-ies">IES <span class="text-danger">*</span></label>
        <div class="form-helper"></div>
      </div>
    </div>
    <span asp-validation-for="academicBody.Ies" class="d-flex text-start text-danger mb-4"></span>
    <div class="d-flex">
      <i class="d-flex align-items-center fas fa-rotate me-2 icon-input"></i>
      <div class="form-floating w-100">
        <select class="form-select" id="input-consolidation-degree" aria-label="Grado de consolidación" asp-for="academicBody.ConsolidationDegree" required>
          <option selected disabled></option>
          <option value="En Formación">En Formación</option>
          <option value="En Consolidación">En Consolidación</option>
          <option value="Consolidado">Consolidado</option>
        </select>
        <label for="input-consolidation-degree">Grado de consolidación <span class="text-danger">*</span></label>
      </div>
    </div>
    <span asp-validation-for="academicBody.ConsolidationDegree" class="d-flex text-start text-danger mb-4"></span>
    <div class="d-flex">
      <i class="d-flex align-items-center fa-solid fa-book-atlas me-2 icon-input"></i>
      <div class="form-outline">
        <input type="text" id="input-ies" class="form-control form-control-lg" maxlength="100"  autocomplete="off" asp-for="academicBody.Discipline" required />
        <label class="form-label" for="input-ies">Área y Disciplina de especialización <span class="text-danger">*</span></label>
        <div class="form-helper"></div>
      </div>
    </div>
    <span asp-validation-for="academicBody.Discipline" class="d-flex text-start text-danger mb-2"></span>
    <input type="hidden" asp-for="academicBody.AcademicBodyId" />
    <div class="row gap-3 justify-content-end mx-0 fixed-bottom bg-white">
      <a role="button" class="col-md-3 btn btn-secondary w-auto" asp-page="./Index">
        <i class="fas fa-times me-2"></i>
        Cancelar
      </a>
      <button type="submit" class="col-md-3 btn btn-primary w-auto">
        <i class="fas fa-save me-2" id="button-submit-form"></i>
        Guardar&nbsp;
      </button>
    </div>
  </form>
</div>
<div class="modal fade" id="modal-create-student" tabindex="-1" data-mdb-keyboard="false" data-mdb-backdrop="true"
  aria-labelledby="modal-title-create-student" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content justify-content-center align-items-center">
      <div class="modal-header text-center">
        <h5 class="modal-title text-dark fs-2 display-6" id="modal-title-create-student">
          Actualizando Cuerpo Académico
        </h5>
      </div>
      <div class="modal-body text-center mx-4">
        <i class="fa-solid fa-spinner fa-6x fa-spin-pulse mt-3 mb-4"></i>
        <p>
          Se está vericando la información del Cuerpo Académico, por favor espere.
        </p>
      </div>
    </div>
  </div>
</div>